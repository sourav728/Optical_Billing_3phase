<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.srv.optical_billing_threephase.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/buttonFullData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonSend"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="32dp"
        android:background="@color/button_full_read"
        android:padding="10dp"
        android:text="@string/fulldata"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonPreviousRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCopy"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="36dp"
        android:background="@color/button_previous_read"
        android:padding="10dp"
        android:text="@string/previous_read"
        android:textColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@color/button_present_read"
        android:padding="10dp"
        android:text="@string/present_read"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSend"
        android:layout_centerHorizontal="true"
        android:background="@color/clear_screen"
        android:padding="10dp"
        android:text="@string/buttonClear"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/copy_text"
        android:padding="10dp"
        android:text="@string/copy"
        android:textColor="@color/white" />

</RelativeLayout>